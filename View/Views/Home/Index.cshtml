@model Cidade

@{
    ViewData["Title"] = "Home";
}

<div class="cidade">
    @for (int i = 0; i < Model.Linhas; i++)
    {
        <div class="linha">
            @for (int j = 0; j < Model.Colunas; j++)
            {
                <div class="celula @Model.Tipo" data-linha="@i" data-coluna="@j"></div>
            }
        </div>
    }
<div>
    <button onclick="AdicionarRua()">Adicionar Rua</button>
    <button onclick="AdicionarCasa()">Adicionar Casa</button>
    <button onclick="ResetarCidade()">resetar Cidade</button>
</div>
</div>